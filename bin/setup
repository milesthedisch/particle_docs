#!/usr/bin/env node

// Theres probably a better way to do this but watever this works for me.
// Get the nodemodule particle lib and write the file in to the public vendor folder.
const fs = require("fs");
const path = require("path");
const pathToParticleLib = require.resolve("particle_library");
const output = path.resolve(__dirname, "../public/src/vendor/particle_lib.js");

fs.readFile(pathToParticleLib, "utf8", function(err, data) {
  if (err) {
    console.log(err);
    process.exit(1);
  }
  fs.writeFile(output, data, "utf8", function(err, data) {
    if (err) {
      console.log(err);
      process.exit(1);
    }
    console.log("Copied in particle_lib succesfully!");
    process.exit(0);
  });
});


